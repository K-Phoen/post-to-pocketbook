<h2>List</h2>

<table style="width: 100%">
  <thead>
    <tr>
      <th style="width: 30%">Title</th>
      <th>URL</th>
      <th style="width: 20%">Actions</th>
    </tr>
  </thead>

  <tfoot>
    <tr>
      <td colspan="3"><%= link_to 'Add', new_article_path %></td>
    </tr>
  </tfoot>

  <tbody>
  <% @articles.each do |article| %>
    <% if article.pdf.nil? %>
      <%= render partial: 'queued_article_row', locals: {article: article} %>
    <% else %>
      <%= render partial: 'article_row', locals: {article: article} %>
    <% end %>
  <% end %>
  </tbody>
</table>
